<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.settings.fragments.logindata.SLoginDataFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/s_login_text"
            android:fontFamily="@font/gilroy_regular"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:inputType="text"
            android:paddingStart="20dp"
            android:background="@drawable/white_textfield"
            android:elevation="3dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/new_login_text"
            android:fontFamily="@font/gilroy_regular"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="20dp"
            android:paddingStart="20dp"
            android:layout_marginBottom="20dp"
            android:inputType="text"
            android:background="@drawable/white_textfield"
            android:elevation="3dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/old_pass_text"
            android:fontFamily="@font/gilroy_regular"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="20dp"
            android:paddingStart="20dp"
            android:layout_marginBottom="20dp"
            android:inputType="text"
            android:background="@drawable/white_textfield"
            android:elevation="3dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/new_pass_text"
            android:fontFamily="@font/gilroy_regular"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="20dp"
            android:paddingStart="20dp"
            android:layout_marginBottom="20dp"
            android:inputType="text"
            android:background="@drawable/white_textfield"
            android:elevation="3dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/repeat_pass_text"
            android:fontFamily="@font/gilroy_regular"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="20dp"
            android:paddingStart="20dp"
            android:layout_marginBottom="40dp"
            android:inputType="text"
            android:background="@drawable/white_textfield"
            android:elevation="3dp"/>

        <Button
            android:id="@+id/save_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/rounded_button"
            android:text="@string/save_btn"
            android:fontFamily="@font/gilroy_regular"
            android:textSize="16sp"/>

    </LinearLayout>

</RelativeLayout>